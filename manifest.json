{
  "manifest_version": 2,

  "name": "Ctrl-F++",
  "description": "This extension searches webpage source code for useful examples",
  "version": "1.0",

 "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery-2.1.3.min.js", "content.js"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}